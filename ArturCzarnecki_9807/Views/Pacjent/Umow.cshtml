@model ArturCzarnecki_9807.Wizyta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layouts/PacjentLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="col" style="margin-left:30%; text-align:center;">
    <h2>Wizyta</h2>
    <hr />


    <div class="form-group">
        @Html.LabelFor(model => model.Godzina, "Godzina", htmlAttributes: new { @class = "labels" })
        <div class="col-md-10">
            @Html.DropDownList("Godzina", null, htmlAttributes: new { @class = "text-boxs" })
            @Html.ValidationMessageFor(model => model.Godzina, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="items">
        <p>Wybierz dzień wizyty:</p>
        <input type="date" name="Data">
    </div>


    <div class="form-group">
        Opisz swój stan
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Opis, new { htmlAttributes = new { @class = "textboxs" } })
            @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Umów się" class="button" />
        </div>
    </div>
</div>
}







