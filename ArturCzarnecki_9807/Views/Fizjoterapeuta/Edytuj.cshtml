@model ArturCzarnecki_9807.Wizyta

@{
    ViewBag.Title = "Wizyty";
    Layout = "~/Views/Layouts/FizjoterapeutaLayout.cshtml";
}

<h2 style="text-align:center">Wizyty</h2>

<div class="col" style="width:100%">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <table class="col1">
            <tr style="text-align:left">
                <th>
                    @Html.DisplayNameFor(model => model.Pacjent.Email)

                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Pacjent.NrTelefonu)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pacjent.Imie)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pacjent.Nazwisko)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pacjent.Miasto)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pacjent.Ulica)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pacjent.Lokal)

                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Data)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Godzina)

                </th>
                <th>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "labels" })
                        <div class="kolumna1">
                            @Html.TextAreaFor(model => model.Opis, new { htmlAttributes = new { @class = "textOpis" } })
                            @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </th>
                <th>
                    <div class="reg-item" style="margin-left:10px;">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Stwórz" class="button" />
                        </div>
                    </div>
                </th>
            </tr>


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Pacjent.Email)
                </td>
                <td>     @Html.DisplayFor(modelItem => modelItem.Pacjent.NrTelefonu)</td>

                <td>   @Html.DisplayFor(model => model.Pacjent.Imie)</td>
                <td>  @Html.DisplayFor(model => model.Pacjent.Nazwisko)</td>
                <td>  @Html.DisplayFor(model => model.Pacjent.Miasto)</td>
                <td>   @Html.DisplayFor(model => model.Pacjent.Ulica)</td>
                <td>                @Html.DisplayFor(model => model.Pacjent.Lokal)</td>
                <td> @Html.DisplayFor(modelItem => modelItem.Data)</td>
                <td> @Html.DisplayFor(model => model.Godzina)</td>
            </tr>









          




        </table>
    }
    </div>







